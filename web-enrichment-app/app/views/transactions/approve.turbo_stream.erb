<%# 1. ACTUALIZA la fila en lugar de removerla (para que veas el cambio en la tabla) %>
<%= turbo_stream.replace dom_id(@transaction) do %>
  <%= render partial: "transaction", locals: { transaction: @transaction } %>
<% end %>

<%# 2. CIERRA la tarjeta flotante (el modal) %>
<%= turbo_stream.update "modal-container", "" %>

<%# 3. NOTIFICACIÓN idéntica a la que ya usas %>
<%= turbo_stream.append "flash-container" do %>
  <%= render partial: "shared/flash", locals: { message: "Corrección sincronizada con Kafka" } %>
<% end %>