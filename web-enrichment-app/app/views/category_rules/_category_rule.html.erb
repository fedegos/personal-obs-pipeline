<div id="<%= dom_id category_rule %>" class="category-rule-detail">
  <div class="category-rule-detail-row">
    <strong class="category-rule-detail-label">Nombre:</strong>
    <%= category_rule.name %>
  </div>
  <div class="category-rule-detail-row">
    <strong class="category-rule-detail-label">Patrón:</strong>
    <code class="category-rule-pattern-code"><%= category_rule.pattern %></code>
  </div>
  <div class="category-rule-detail-row">
    <strong class="category-rule-detail-label">Prioridad:</strong>
    <%= category_rule.priority %>
  </div>
  <div class="category-rule-detail-row">
    <strong class="category-rule-detail-label">Categoría superior:</strong>
    <%= category_rule.parent&.name || "— Raíz" %>
  </div>
  <div class="category-rule-detail-row">
    <strong class="category-rule-detail-label">Sentimiento:</strong>
    <span class="<%= 'category-rule-sentimiento-empty' if category_rule.sentimiento.blank? %>">
      <%= category_rule.sentimiento.present? ? (Transaction::SENTIMIENTOS[category_rule.sentimiento] || category_rule.sentimiento) : "— Sin definir" %>
    </span>
  </div>
</div>
