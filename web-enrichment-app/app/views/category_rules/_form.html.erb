<%= form_with(model: category_rule, style: "display: flex; flex-direction: column; gap: 15px; max-width: 400px;") do |f| %>
  <div>
    <%= f.label :name, "Nombre de la Regla", style: "display: block; font-weight: bold;" %>
    <%= f.text_field :name, style: "width: 100%; padding: 8px;" %>
  </div>

  <div>
    <%= f.label :parent_id, "Categoría Superior (Opcional)", style: "display: block; font-weight: bold;" %>
    <%= f.collection_select :parent_id, CategoryRule.roots, :id, :name, { include_blank: "Es una Categoría Raíz" }, { style: "width: 100%; padding: 8px;" } %>
  </div>

  <div>
    <%= f.label :pattern, "Patrón Regex", style: "display: block; font-weight: bold;" %>
    <%= f.text_field :pattern, style: "width: 100%; padding: 8px;", placeholder: "PALABRA1|PALABRA2" %>
  </div>

  <div>
    <%= f.label :priority, "Prioridad (Más alto = se evalúa antes)", style: "display: block; font-weight: bold;" %>
    <%= f.number_field :priority, style: "width: 100%; padding: 8px;" %>
  </div>

  <div>
    <%= f.submit "Guardar Regla", style: "background: #28a745; color: white; padding: 10px; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>
